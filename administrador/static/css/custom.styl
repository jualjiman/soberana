@import "fonts.css"
@import "bootstrap.css"
@import "timeline.css"

permitedBackground = #fafafa
enfasis = darken(permitedBackground,2%)

lighterGray = #ddd
lightGray = #AEADB3
darkGray = #98979C

text = #626262;
news-date-text = #707070

redC = #A5273F
greenC = #207146

h1
h2
h3
h4
h5
	font-family: 'soberanaTitularRegular'

h3
	color greenC

.text-red
	color redC !important

.text-white
	color permitedBackground

.text-green
	color greenC !important

a.text-green
	&:hover
		color darken(greenC,20%)
ol.decimal-list
	list-style none
	padding-left 18px

*
	font-family 'soberanaSansRegular'

body
	background permitedBackground
	color text

#redesSociales
	margin 5px
	text-align right
	
	a
		text-decoration none 

hr.doubleLine
	border-top double 3px lighterGray

.hr-margin-large
	margin 43px 0
footer
	  border-top 1px solid lighterGray

.footer-link
	width 60px
	margin 5px 10px

.border-top-g
	margin 10px 0
	padding 10px 0 0 0
	border-top solid 1px lighterGray

.border-right-g
	border-right solid 1px lighterGray

.border-left-g
	border-left solid 1px lighterGray

.border-bottom-g
	margin 10px 0
	border-bottom solid 1px lighterGray

.other-news-content
	h4
		color greenC

.autoWidth
	width 100%

.navbar-brand
	.logos-collapsed
		width 220px
		padding 4px
	h5
		display inline
		font-family 'soberanaTitularRegular'
		font-size 13px

#bottomMenus
	h5
		color redC
	ul
		padding 0

		li
			list-style none
			font-size 13px
			line-height 30px

#social
	background lighten(enfasis,40%)
	border-top solid 1px lighten(lighterGray,40%)

	.col-md-4 
		padding 10px 0

.enfasis
	background enfasis
	padding-top 20px
	border solid 1px lighterGray

#recent-news
	h3
		color redC
	h4
		color greenC

.seach-field
	margin 20px 0 10px 0

.margin-top-low
	margin-top 10px

.margin-top-med
	margin-top 15px

.margin-img-float
	padding 7px 10px 10px 0

.margin-bottom
	margin-bottom 15px

.column-left
	border-right solid 1px lighterGray

.column-right
	border-left solid 1px lighterGray

.thumbnail
	position relative
	cursor: pointer

header
	padding-top 5px

	.col-xs-3
		text-align center
		
		img
			display inline-block
		.logoita
			width 100px
		.logofederal
			width 245px
		
	
	.col-xs-6
		height 100px

		h1
			font 18px 'soberanaTitularBold' 
			text-transform uppercase
			text-align center
			color #909090

.navbar-default 
	.navbar-nav 
		> li 
			> a
				font-family 'soberanaTitularRegular'
				font-size 14px
				transition all 0.4s ease
				text-decoration none
.news-date
	background url('../img/cintillo.png') 0px 0px no-repeat
	width 85px
	height 40px
	display inline-block
	position absolute
	padding 9px
	font-size 13px
	left -13px
	top 15px
	color news-date-text

.link
	text-decoration underline

.huge
	font-size 10em

#map-content
	min-height 400px
	background grisClaro

.asking-block
	background greenC
	color lighterGray
	padding 25px 0 20px 0

	a
		color lighterGray !important
		font-family 'soberanaTitularRegular'

.jumbotron
	padding: 0;
	margin-bottom: 30px;
	color: inherit;
	background-color: inherit;
	
	h1
		font-size 45px
	p
		font-size 16px

.eventos
	background: linear-gradient(greenC, darken(greenC, 30%));
	padding 10px !important

	.caption
		height 100%
		border 1px solid rgba(255, 255, 255, 0.45);
		background: linear-gradient(greenC, darken(greenC, 30%));
		h4
			color white		

			span
				font-size 15px
		ul
			padding-left 20px
			color white

			strong
				font-size 14px
			i
				display block
				color lighten(greenC, 70%)
				font-size 12px
.event-description
	text-align justify

.fb-comments
.fb-comments span
.fb-comments iframe[style] 
.fb-comments iframe span[style]
.fb-like-box
.fb-like-box span
[class^="feedback_"]
	width 100% !important


.fb-comments span
	margin-top 15px


///////////////////////////////MEDIA QUERIES////////////////////////////////
@media (min-width: 992px)
	.thumbnail.recent.home
		min-height 412px !important

@media (min-width: 768px)
	.thumbnail
		min-height 360px
		padding 0

	.logoFederalFooter
		max-width: 200px;

@media (max-width: 768px)
	
	.margin-img-float
		width 100%
		padding 0 0 10px 0

	.carousel-caption 
		background rgba(207, 36, 42, 0.3)

		h3
			font-size 14px
			margin 10px
			padding 10px

	#bottomMenus
		h5
		ul
			text-align center

	hr.hr-margin-large
		margin 35px 0

	#column-left
	#column-right
		border-left none

	#redesSociales
		text-align center 
		margin 15px

